#!/bin/bash
help(){
        cat <<EOF 
        usage: ts_getid [-p]
	returns the system id if present. 
        -p /path/to/mountpoint        The directory where the target file system is mounted. Use this if you are working on an external or mounted  drive e.g. a drive mounted from a system rescue cd.

EOF
        exit 0
}

# source common functions
FUNCTIONS=ts_functions.sh # /path/to../
source $FUNCTIONS

### MAIN ###

### Process options ###

while getopts ":h" option; do
        case $option in
                h) help
                   exit
                ;;
		p) path="$OPTARG"
                ;;
                \?) help
                    exit
                ;;
        esac
done

if [[ -e $path/var/lib/freegeek-extras/printme/system_id ]] 
then 
	echo -n "System ID:"
	cat $path/var/lib/freegeek-extras/printme/system_id 
	exit 0
else 
	echo "system id not found" 
	exit 1
fi


